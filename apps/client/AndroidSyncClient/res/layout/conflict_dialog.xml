<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:id="@+id/clientTextView" android:text="Client change"
              android:textSize="12sp"
              android:textStyle="bold"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="5px"/>

    <ListView android:id="@+id/clientListView"
              android:layout_width="match_parent"
              android:layout_height="200px"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/useClientChange"
            android:id="@+id/useClientBtn"
            />

    <TextView android:id="@+id/serverTextView" android:text="Server change"
              android:textSize="12sp"
              android:textStyle="bold"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="5px"/>

    <ListView android:id="@+id/serverListView"
              android:layout_width="match_parent"
              android:layout_height="200px"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/useServerChange"
            android:id="@+id/useServerBtn"
            />

</LinearLayout>